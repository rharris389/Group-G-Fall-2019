<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:text="New Event Start Date: "/>
                <TextView
                    android:id="@+id/eventStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="20dp"
                />
             </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="Start Time: "/>
                <EditText
                    android:id="@+id/eventStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_style"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select  "
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:paddingStart="20dp"
                    android:text="Frequency: "/>
                <RelativeLayout
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_style"
                    android:backgroundTint="@color/colorPrimaryDark">
                <Spinner
                    android:spinnerMode="dropdown"
                    android:id="@+id/eventFrequency"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/frequency_arrays"
                    android:dropDownWidth="fill_parent"
                    android:textSize="15sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingEnd="0dp"
                    android:popupBackground="@color/colorPrimaryDark"
                    />
            </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="End Date: "/>
                <EditText
                    android:id="@+id/eventEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_style"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textColorHint="#e9e9e9"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="     End Time: "/>
                <EditText
                    android:id="@+id/eventEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_style"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select  "
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>
            </LinearLayout>


            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="Is Event a Goal?  "/>
                <CheckBox
                    android:id="@+id/eventIsGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textColorHint="#e9e9e9"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="Event Description: "/>
            </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:orientation="horizontal">
                <EditText
                    android:id="@+id/eventName"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/border_style"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:textSize="16sp"
                   android:textAlignment="gravity"
                    android:gravity="top"
                    android:textColorHint="#e9e9e9"
                    android:hint="Please Describe Event"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="Event Notification Date: "/>
                <EditText
                    android:id="@+id/eventNotificationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_style"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select Date"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="Event Notification Time: "/>
                <EditText
                    android:id="@+id/eventNotificationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_style"
                    android:backgroundTint="@color/colorPrimaryDark"

                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select Time"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/addEvent"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:text="Add New Event"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:background="#fff"/>

        </LinearLayout>

    </RelativeLayout>

