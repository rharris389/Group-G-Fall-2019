<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:text="Event Information: "/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="Start Date: "/>
                <EditText
                    android:id="@+id/eventStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select    "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="   Start Time: "/>
                <EditText
                    android:id="@+id/eventStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select  "/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="End Date: "/>
                <EditText
                    android:id="@+id/eventEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select    "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:text="     End Time: "/>
                <EditText
                    android:id="@+id/eventEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select  "/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="Event Frequency: "/>
                <EditText
                    android:id="@+id/eventFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textColorHint="#e9e9e9"
                    android:hint="Select frequency"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="Is Event a Goal?  "/>
                <CheckBox
                    android:id="@+id/eventIsGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textColorHint="#e9e9e9"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="Event Description: "/>
                <EditText
                    android:id="@+id/eventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textColorHint="#e9e9e9"
                    android:hint="Please Describe Event"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="Event Notification Date: "/>
                <EditText
                    android:id="@+id/eventNotificationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"

                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select Date"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:text="Event Notification Time: "/>
                <EditText
                    android:id="@+id/eventNotificationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textColorHint="#e9e9e9"
                    android:focusableInTouchMode="false"
                    android:hint="Select Time"/>
            </LinearLayout>
            <TextView
                android:id="@+id/addEvent"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_marginTop="40dp"
                android:layout_height="40dp"
                android:text="Add New Event"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:background="#fff"/>

        </LinearLayout>



    </RelativeLayout>

